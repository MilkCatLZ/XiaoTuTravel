<resources>


    <style name="style_user_info_edit_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:background">@color/_foreground_material_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingStart">17dp</item>
    </style>

    <style name="style_user_info_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4b4b4b</item>
        <item name="android:textSize">@dimen/text_primary_14dp</item>
    </style>

    <style name="style_user_info_edt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/text_primary_333333</item>
        <item name="android:textColorHint">@color/text_third_primary_999999</item>
        <item name="android:textSize">@dimen/text_primary_14dp</item>
    </style>

</resources>
