<resources>

    <style name="style_message_center_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">93dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingEnd">17dp</item>
        <item name="android:paddingStart">17dp</item>
        <item name="android:background">@color/_foreground_material_light</item>
    </style>

    <style name="style_message_center_logo">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
    </style>

    <style name="style_message_center_text_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_message_center_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#353235</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_message_center_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#9a979b</item>
        <item name="android:textSize">@dimen/text_primary_14dp</item>
    </style>

</resources>
