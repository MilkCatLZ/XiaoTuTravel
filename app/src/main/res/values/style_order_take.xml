<resources>

    <style name="style_indicator_green">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/icon_round_green</item>
    </style>

    <style name="style_indicator_grey">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/icon_round_grey</item>
    </style>

    <style name="style_order_take_state">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">27.5dp</item>
        <item name="android:textSize">@dimen/text_second_primary_12dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="style_order_take_indicator_out">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/img_circle_white</item>
    </style>

    <style name="style_order_take_indicator_in">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/img_circle_selector</item>
    </style>

    <style name="style_order_take_indicator_line_user_vip">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/back_order_state_line_selector</item>
    </style>
    <style name="style_order_take_indicator_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/back_order_state_line_selector</item>
    </style>

    <style name="style_indicator_vertical">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:background">@drawable/back_indicator_vertical</item>
    </style>

</resources>
