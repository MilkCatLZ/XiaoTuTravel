<resources>

    <style name="style_order_detail_money_detail_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="style_order_detail_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_second_primary_666666</item>
        <item name="android:textSize">@dimen/text_primary_14dp</item>
    </style>

    <style name="style_order_detail_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textColor">@color/text_second_primary_666666</item>
        <item name="android:textSize">@dimen/text_primary_14dp</item>
    </style>
</resources>
