<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_back"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/style_order_take_state"
            android:text="待接单"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                style="@style/style_order_take_indicator_line"
                android:layout_toEndOf="@id/img_state_1"/>

            <RelativeLayout
                android:id="@+id/img_state_1"
                style="@style/style_order_take_indicator_out">

                <ImageView
                    style="@style/style_order_take_indicator_in"
                    android:src="@drawable/img_circle_green"/>

            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/style_order_take_state"
            android:text="待支付"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                style="@style/style_order_take_indicator_line"/>

            <RelativeLayout
                android:id="@+id/img_state_2"
                style="@style/style_order_take_indicator_out">

                <ImageView
                    style="@style/style_order_take_indicator_in"
                    android:src="@drawable/img_circle_green"/>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/style_order_take_state"
            android:text="运输中"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                style="@style/style_order_take_indicator_line"/>

            <RelativeLayout
                android:id="@+id/img_state_3"
                style="@style/style_order_take_indicator_out">

                <ImageView
                    style="@style/style_order_take_indicator_in"
                    android:src="@drawable/img_circle_green"/>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/style_order_take_state"
            android:text="运输中"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                style="@style/style_order_take_indicator_line"
                android:layout_toStartOf="@id/img_state_4"/>

            <RelativeLayout
                android:id="@+id/img_state_4"
                style="@style/style_order_take_indicator_out">

                <ImageView
                    style="@style/style_order_take_indicator_in"
                    android:src="@drawable/img_circle_green"/>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>