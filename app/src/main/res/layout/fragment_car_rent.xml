<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import
            alias="util"
            type="com.base.util.StringUtils" />

        <variable
            name="p"
            type="shy.car.sdk.travel.rent.presenter.CarRentPresenter" />

        <variable
            name="fragment"
            type="shy.car.sdk.travel.rent.ui.CarRentFragment" />

        <variable
            name="user"
            type="shy.car.sdk.travel.user.data.User" />

        <variable
            name="detail"
            type="shy.car.sdk.travel.order.data.RentOrderDetail" />
    </data>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/_foreground_material_light"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/group_radio">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_car_category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:bindAdapter="@{p.carCategoryListAdapter}" />

                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_more_horiz_black_18dp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.amap.api.maps.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="270dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:onClick="@{()->fragment.onNearCarClick()}"
                        android:src="@drawable/icon_site" />


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="10dp"
                        android:onClick="@{()->fragment.refreshLocation()}"
                        android:src="@drawable/icon_locat" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edt_zoom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:text="10" />

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:onClick="@{()->fragment.changeZoom()}"
                        android:text="修改缩放级别" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="#99000000"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <LinearLayout
            android:id="@+id/view_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibleOrGone="@{!fragment.drivingMode&amp;&amp;fragment.hasUsableCar}"
            app:behavior_peekHeight="@dimen/_260dp"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
            tools:visibility="visible">

            <include
                layout="@layout/layout_car_rent_bottomsheet"
                app:fragment="@{fragment}"
                app:presenter="@{p}"
                app:user="@{user}" />

            <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:onClick="onClick"-->
            <!--android:text="点击跳转" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_bottom_sheet_driving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibleOrGone="@{fragment.drivingMode}"
            app:behavior_peekHeight="245dp"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
            tools:visibility="gone">

            <include
                layout="@layout/layout_car_rent_bottomsheet_driving"
                app:detail="@{detail}"
                app:fragment="@{fragment}" />

        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>


</layout>

