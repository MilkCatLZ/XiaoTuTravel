<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import
            alias="util"
            type="com.base.util.StringUtils"/>

        <variable
            name="p"
            type="shy.car.sdk.travel.rent.presenter.CarRentPresenter"/>

        <variable
            name="fragment"
            type="shy.car.sdk.travel.rent.ui.CarRentFragment"/>
    </data>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/_foreground_material_light"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/group_radio">

                <LinearLayout
                    style="@style/style_user_center_bottom_content"
                    android:layout_height="match_parent">

                    <RadioButton
                        style="@style/style_wm.car"
                        android:checked="true"
                        android:text="全部车型"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/style_user_center_bottom_content"
                    android:layout_height="match_parent">

                    <RadioButton
                        style="@style/style_wm.car"
                        android:text="小兔EQ1"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/style_user_center_bottom_content"
                    android:layout_height="match_parent">

                    <RadioButton
                        style="@style/style_wm.car"
                        android:text="小兔EQ2"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/style_user_center_bottom_content"
                    android:layout_height="match_parent">

                    <RadioButton
                        style="@style/style_wm.car"
                        android:text="小兔EQ3"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_more_horiz_black_18dp"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.amap.api.maps2d.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:onClick="@{()->fragment.onNearCarClick()}"
                    android:layout_marginTop="150dp"
                    android:src="@drawable/icon_site"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="200dp"
                    android:onClick="@{()->fragment.refreshLocation()}"
                    android:src="@drawable/icon_locat"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_zoom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="10"
                        android:inputType="number"/>

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:onClick="@{()->fragment.changeZoom()}"
                        android:text="修改缩放级别"/>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            app:behavior_peekHeight="260dp"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

            <include
                layout="@layout/layout_car_rent_bottomsheet"
                app:fragment="@{fragment}"
                app:p="@{p}"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="点击跳转"/>
        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>


</layout>

