<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import
            alias="util"
            type="com.base.util.StringUtils"/>

        <variable
            name="name"
            type="String"/>

        <variable
            name="adapter"
            type="com.base.databinding.DataBindingAdapter"/>
    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingStart="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#f3f4f5"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门城市"
                android:textColor="@color/text_third_primary_999999"
                android:textSize="@dimen/text_primary_14dp"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_city_hot"
            android:bindAdapter="@{adapter}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>
    </LinearLayout>
</layout>