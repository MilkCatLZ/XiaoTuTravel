<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="fragment"
            type="shy.car.sdk.travel.dialog.DialogMoneyVerify"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="160dp"
            android:background="@drawable/back_dialog_corner_2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="22dp"
                android:text="认证未缴纳"
                android:textColor="@color/text_primary_333333"
                android:textSize="@dimen/text_title_16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="15dp"
                android:text="为了完善用车体验，请您完成身份认证和缴纳保证金后用车。"
                android:textColor="@color/text_second_primary_666666"
                android:textSize="@dimen/text_primary_14dp"/>

            <View
                style="@style/line_horizontal"
                android:layout_marginTop="18dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="@{()->fragment.onConfirmClick()}"
                android:text="点我完成"
                android:textColor="@color/main_color_green"
                android:textSize="@dimen/text_title_16dp"/>
        </LinearLayout>
    </LinearLayout>
</layout>