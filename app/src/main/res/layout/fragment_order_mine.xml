<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import
            alias="util"
            type="com.base.util.StringUtils"/>

        <variable
            name="presenter"
            type="shy.car.sdk.travel.order.send.presenter.OrderSendPresenter"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:src="@drawable/icon_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="我的订单"
                    android:textColor="@color/text_primary_333333"
                    android:textSize="16sp"/>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/group_radio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/_foreground_material_light"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_city">

                <LinearLayout
                    style="@style/style_user_center_bottom_content"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radio_order_mine_all"
                        style="@style/style_wm.order_mine"
                        android:checked="true"
                        android:text="全部订单"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/style_user_center_bottom_content"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radio_order_mine_rent"
                        style="@style/style_wm.order_mine"
                        android:text="租车"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/style_user_center_bottom_content"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radio_order_mine_take"
                        style="@style/style_wm.order_mine"
                        android:text="接单"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/style_user_center_bottom_content"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radio_order_mine_send"
                        style="@style/style_wm.order_mine"
                        android:text="发货"/>
                </LinearLayout>
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/shadow"/>
        </RelativeLayout>


        <com.base.widget.UltimateRecyclerView
            android:id="@+id/recyclerView_order_mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_back"
            android:bindAdapter="@{presenter.adapter}"
            app:recyclerviewDefaultSwipeColor="@array/google_colors"
            app:recyclerviewEmptyView="@layout/error_no_record"
            app:recyclerviewScrollbars="vertical"
            tools:listItem="@layout/item_order_take"/>

    </LinearLayout>
</layout>
