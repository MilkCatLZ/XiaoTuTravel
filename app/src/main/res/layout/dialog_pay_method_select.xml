<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import
            alias="util"
            type="com.base.util.StringUtils" />

        <variable
            name="fragment"
            type="shy.car.sdk.travel.pay.dialog.PayMethodSelectDialog" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/_foreground_material_light"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="选择支付方式"
            android:textColor="@color/text_primary_333333"
            android:textSize="@dimen/text_primary_14dp" />

        <View style="@style/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:onClick="@{()->fragment.onWeChatPayClick()}"
            android:layout_height="63dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_wechatpay" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="微信支付"
                    android:textColor="@color/text_primary_333333"
                    android:textSize="@dimen/text_primary_14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="推荐微信用户使用"
                    android:textColor="@color/text_third_primary_999999"
                    android:textSize="@dimen/text_second_primary_12dp" />

            </LinearLayout>

            <CheckBox
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/check_pay_action"
                android:button="@null"
                android:clickable="false"
                android:checked="@{fragment.payMethod==fragment.Companion.WeChatPay}" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:onClick="@{()->fragment.onAliPayClick()}"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_alipay" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="支付宝"
                    android:textColor="@color/text_primary_333333"
                    android:textSize="@dimen/text_primary_14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="推荐支付宝用户使用"
                    android:textColor="@color/text_third_primary_999999"
                    android:textSize="@dimen/text_second_primary_12dp" />

            </LinearLayout>

            <CheckBox
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:clickable="false"
                android:layout_marginEnd="15dp"
                android:background="@drawable/check_pay_action"
                android:button="@null"
                android:checked="@{fragment.payMethod==fragment.Companion.AliPay}"/>
        </LinearLayout>
    </LinearLayout>

</layout>
