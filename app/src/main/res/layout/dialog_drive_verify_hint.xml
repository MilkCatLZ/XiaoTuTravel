<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="fragment"
            type="shy.car.sdk.travel.order.dialog.DriverVerifyHintFragment"/>
    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/back_dialog_corner_2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="15dp"
                android:text="认证货运未完成"
                android:textColor="@color/text_primary_333333"
                android:textSize="@dimen/text_title_17dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="15dp"
                android:text="请先认证司机货运资格证，才能联系货主赚大钱"
                android:textColor="@color/text_second_primary_666666"
                android:textSize="@dimen/text_primary_14dp" />

            <View
                style="@style/line_horizontal"
                android:layout_marginTop="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:onClick="@{()->fragment.goDriverVerify()}"
                android:text="去认证"
                android:textColor="@color/main_color_green"
                android:textSize="@dimen/text_title_16dp" />
        </LinearLayout>
    </LinearLayout>
</layout>